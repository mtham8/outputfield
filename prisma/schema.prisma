model Work {
  id    Int     @id @default(autoincrement())
  title String? @default("")
  url   String  @default("")

  artist   Artist @relation(fields: [artistID], references: [id], onDelete: Cascade)
  artistID Int
}

model Link {
  id    Int     @id @default(autoincrement())
  title String? @default("")
  url   String  @default("")

  artist   Artist @relation(fields: [artistID], references: [id], onDelete: Cascade)
  artistID Int
}

